---
import { Image } from "astro:assets";
import Layout from '../layouts/Layout.astro';
import Logo from '../images/logo.png';
---

<Layout title="Seba Sepulveda | Data Scientist">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto py-16">
      <!-- Top section: Image (left) and Text (right) -->
      <div class="flex items-center gap-8">
        <!-- Image -->
        <div class="w-32 h-32 rounded-full overflow-hidden flex-shrink-0 border-2 border-dark-accent">
          <Image 
          src={Logo} 
          alt="Seba Sepulveda" 
          class="w-full h-full object-cover" 
          />
        </div>

        <!-- Text -->
        <div class="text-left">
          <h1 class="text-3xl font-normal mb-4">Hi, I'm Sebastian Sepulveda</h1>
          <p class="text-lg text-gray-600 mb-8">
            A Chilean data scientist specializing in Data Engineering, Vision AI, and GenAI.
          </p>
        </div>
      </div>

      <!-- Buttons row: Centered -->
      <div class="flex justify-center space-x-4 mt-8">
        <a
          href="/cv"
          class="inline-block px-6 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-colors"
        >
          View CV
        </a>
        <a
          href="/blog"
          class="inline-block px-6 py-3 border border-gray-900 rounded-lg hover:bg-gray-50 transition-colors"
        >
          Read Blog
        </a>
      </div>
    </div>
  </div>
</Layout>
