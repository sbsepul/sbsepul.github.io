---
import Layout from '../layouts/Layout.astro';
import { FaXTwitter, FaGithub, FaLinkedin } from 'react-icons/fa6';
---

<Layout title="CV | Seba Sepulveda">
  <div class="container mx-auto px-4 max-w-3xl py-16">
    <h1 class="text-4xl font-bold mb-4">Curriculum Vitae</h1>
    <!-- add icons with links -->
    <div class="flex space-x-4 mb-8">
      <a href="https://x.com/sbsepul" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-500">
        <FaXTwitter class="w-6 h-6" />
      </a>
      <a href="https://github.com/sbsepul" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-500">
        <FaGithub class="w-6 h-6" />
      </a>
      <a href="https://linkedin.com/sebasepulveda" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-500">
        <FaLinkedin class="w-6 h-6" />
      </a>
    </div>
    <!-- Last updated -->
    <p class="text-gray-400 mb-8">Last updated: January 2025</p>

    <!-- Education -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Education</h2>
      <div class="border-l-2 border-gray-200 pl-4">
        <div class="mb-6">
          <!-- Top row with title & date -->
          <div class="flex justify-between">
            <div>
              <h3 class="text-xl font-semibold">M.Sc. in Data Science & Computer Science</h3>
              <p class="text-gray-300">University of Chile</p>
            </div>
            <!-- Date on the right -->
            <p class="text-gray-200">2022 - 2024</p>
          </div>

          <!-- Optional bullet points below -->
          <ul class="list-disc list-inside mt-2 text-gray-400">
            <li>Specializations in Machine Learning, Deep Learning, Big Data</li>
            <li>Graduated with honors, focusing on applied Vision AI research</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Experience -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Experience</h2>
      <div class="border-l-2 border-gray-200 pl-4">

        <div class="mb-6">
          <!-- Top row with title & date -->
          <div class="flex justify-between">
            <div>
              <h3 class="text-xl font-semibold">Data Engineer</h3>
              <p class="text-gray-300">Falabella Retail S.A.</p>
            </div>
            <!-- Date on the right -->
            <p class="text-gray-200">2022 - Present</p>
          </div>

          <!-- Optional bullet points below -->
          <ul class="list-disc list-inside mt-2 text-gray-400">
            <li>Developed and maintained robust data pipelines</li>
            <li>Implemented cloud-based solutions using GCP</li>
            <li>Optimized Bigquery-based data processing workflows</li>
            <li>Collaborated with cross-functional teams to integrate ML models into production</li>
          </ul>
        </div>

      </div>
    </section>

    <!-- Skills -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Skills</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <h3 class="font-semibold mb-2">Programming Languages</h3>
          <ul class="list-disc list-inside text-gray-400">
            <li>Python</li>
            <li>TypeScript</li>
            <li>SQL</li>
          </ul>
        </div>
        <div>
          <h3 class="font-semibold mb-2">Technologies & Tools</h3>
          <ul class="list-disc list-inside text-gray-400">
            <li>AWS (Lambda, S3, EC2)</li>
            <li>Spark</li>
            <li>TensorFlow & PyTorch</li>
            <li>Docker & Kubernetes</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Interests -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Interests</h2>
      <ul class="list-disc list-inside text-gray-400 ml-4">
        <li>Vision AI & Generative AI (GenAI)</li>
        <li>Data Analysis in the Retail and Financial Sector</li>
        <li>Machine Learning Research</li>
      </ul>
    </section>

    <!-- Projects (Optional) -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Projects</h2>
      <div class="border-l-2 border-gray-200 pl-4">
        <div class="mb-6">
          <div class="flex justify-between">
            <div>
              <h3 class="text-xl font-semibold">Vision AI Toolkit</h3>
              <p class="text-gray-300">Personal Project</p>
            </div>
            <p class="text-gray-200">2021</p>
          </div>
          <ul class="list-disc list-inside mt-2 text-gray-400">
            <li>Implemented object detection models with PyTorch</li>
            <li>Deployed a Flask app for real-time video inference</li>
          </ul>
        </div>
        <div class="mb-6">
          <div class="flex justify-between">
            <div>
              <h3 class="text-xl font-semibold">Financial Data Pipeline</h3>
              <p class="text-gray-300">Personal Project</p>
            </div>
            <p class="text-gray-200">2020</p>
          </div>
          <ul class="list-disc list-inside mt-2 text-gray-400">
            <li>Aggregated and analyzed large financial datasets (stocks, crypto)</li>
            <li>Built ETL pipelines in Python using Airflow & Spark</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Languages -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Languages</h2>
      <ul class="list-disc list-inside text-gray-400 ml-4">
        <li>Spanish (Native)</li>
        <li>French (Intermediate)</li>
        <li>English (Proficient)</li>
      </ul>
    </section>

  </div>
</Layout>
